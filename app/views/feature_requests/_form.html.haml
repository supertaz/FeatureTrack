- form_for @feature_request do |f|
  = f.error_messages
  %p
    = f.label :status
    %br
    = f.text_field :status
  %p
    = f.label :story_source
    %br
    = f.text_field :story_source
  %p
    = f.label :story_id
    %br
    = f.text_field :story_id
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :requestor_id
    %br
    = f.text_field :requestor_id
  %p
    = f.label :approver_id
    %br
    = f.text_field :approver_id
  %p
    = f.label :approved_at
    %br
    = f.datetime_select :approved_at
  %p
    = f.label :rejected_at
    %br
    = f.datetime_select :rejected_at
  %p
    = f.label :priority
    %br
    = f.text_field :priority
  %p
    = f.label :risk
    %br
    = f.text_field :risk
  %p
    = f.label :affected
    %br
    = f.text_field :affected
  %p
    = f.label :functional_area
    %br
    = f.text_field :functional_area
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.submit
